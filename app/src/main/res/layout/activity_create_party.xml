<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".view.admin.CreatePartyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button in the top left corner -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@null"
            android:contentDescription="Back"
            android:src="@drawable/ic_back_red"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp" />


        <!-- CardView for the create party section with match_parent width and side margins -->
        <androidx.cardview.widget.CardView
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backButton"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Create Party Title with reduced text size -->
                <TextView
                    android:id="@+id/createPartyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Party"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <!-- Party Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/partyNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partyNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Party Name"
                        android:textColor="@android:color/black"
                        android:textColorHint="#AAAAAA" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Party Date Field (Date Picker) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/partyDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partyDateEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="Party Date"
                        android:textColor="@android:color/black"
                        android:textColorHint="#AAAAAA" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Party Description Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/partyDescriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partyDescriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Party Description"
                        android:textColor="@android:color/black"
                        android:textColorHint="#AAAAAA" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Party Location Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/partyLocationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/partyLocationEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Party Location"
                        android:textColor="@android:color/black"
                        android:textColorHint="#AAAAAA" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Available Tickets Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/availableTicketsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/availableTicketsEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Available Tickets"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textColorHint="#AAAAAA" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Ambassador Markup Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ambassadorMarkupLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ambassadorMarkupEditText"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:hint="Ambassador Markup"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textColorHint="#AAAAAA" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Select Photos Button -->
                <Button
                    android:id="@+id/selectPhotosButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#880808"
                    android:text="Select Photos"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cornerRadius="15dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>
