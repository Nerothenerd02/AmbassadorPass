<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".view.user.PageFiveActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="Back"
        android:background="@drawable/circular_background"
        android:src="@drawable/ic_back_red"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp" />

    <!-- Logo ImageView -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/gemini"
        android:layout_below="@id/backButton"
        android:layout_centerHorizontal="true" />

    <!-- Title FrameLayout -->
    <FrameLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:clipChildren="true"
        android:clipToPadding="true">

        <!-- Title TextView -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="WE DID NOT FORGET"
            android:textColor="#880808"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center" />
    </FrameLayout>

    <!-- Typewriter TextView Container -->
    <FrameLayout
        android:id="@+id/additionalInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clipChildren="true"
        android:clipToPadding="true">

        <!-- Additional Info Text -->
        <TextView
            android:id="@+id/additionalInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="The Location of the Party is"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center" />
    </FrameLayout>

    <!-- Details Section -->
    <LinearLayout
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/additionalInfoContainer"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="20dp">

        <TextView
            android:id="@+id/partyDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/userDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingBottom="8dp" />
    </LinearLayout>


    <!-- Confirm Button -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#880808"
        android:text="Homepage"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>
